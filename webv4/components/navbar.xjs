<?xjs
    var pages = require({}, settings.web_lib + 'pages.js', 'pages');
    locale.section = 'main';
?>

<? function subMenu(obj, title, path) { ?>
	<li class="dropdown<? if (path.match(/\//g).length > 1) write('-submenu'); ?>">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
			<? write(title.replace(/^.*\-/, '')); ?>
			<span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			<? menu(obj.list, path); ?>
		</ul>
	</li>
<? } ?>

<?xjs
	function menu(arr, path) {
		arr.forEach(function (e) {
			if (e.type == 'list') {
				subMenu(e, e.title, (path || '') + e.title + '/');
			} else {
?>
                <li>
                    <? if (e.type == 'link') { ?>
                        <a class="dropdown-item" href="./?page=<? write(e.page); ?>" target="_blank">
                    <? } else { ?>
                        <a class="dropdown-item" href="./?page=<? write((path || '') + e.page); ?>">
                    <? } ?>
                        <? write(e.title); ?>
                    </a>
                </li>
<?xjs
            }
        });
    }
?>

