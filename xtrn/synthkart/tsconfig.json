{
  "compilerOptions": {
    "target": "ES5",
    "module": "None",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "lib": ["ES5", "ES2015.Core", "ES2015.Collection"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
