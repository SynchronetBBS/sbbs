getcmd 1GREFSQCUHJT?\r
logkey_comma

cmdkey ?
	compare_ars expert
	if_true
		menu wildcat/msg
		end_if
	end_cmd

cmdkey Q
	cmd_pop
	goto main
	end_cmd

cmdkey R
	cmd_home
	print "n\r\nyhReading Messages: [wNy]ew messages, [wSy]earch, "
	print "[wUy]nread personal,\r\n"
	print "[wJy]oin, or [wENTERy] to quit? "
