		msg_ptrs_cfg
		end_cmd

	cmdkey I
		msg_ptrs_reinit
		end_cmd

	cmdkey Q
		cmd_pop
		end_cmd

	end_cmd

cmdkey H
	toggle_user_misc UM_EXPERT
	print "\r\nExpert mode is now: "
	compare_ars EXPERT
	if_true
		print "ON"
	else
		print "OFF"
		end_if
	crlf
        end_cmd

cmdkey J
	msg_select_area
        end_cmd

cmdkey T
	msg_qwk
        end_cmd

cmdkey G
	file_download_batch
	if_true
		end_cmd
                end_if
	compare_ars expert
	if_false
		logoff
	else
		logoff_fast
		end_if
        end_cmd

cmdkey 1
	compare_ars SYSOP or exempt Q or I or N
	if_true
		cmd_pop
		goto sysop
		end_if
        end_cmd

