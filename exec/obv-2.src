        if_true
            file_list
        end_if
end_cmd

cmdkey M
    call message
end_cmd

cmdkey N
    file_new_scan
end_cmd

cmdkey Q
    cmd_pop
    return
end_cmd

cmdkey R
    file_batch_section
end_cmd

cmdkey S
    crlf
    mnemonics "Search by ~File Name or ~Text: "
    crlf
    print "\x01n\x01hCommand: "
    getcmd "FT"

        cmdkey F
            file_find_name
        end_cmd

        cmdkey T
            file_find_text
        end_cmd
end_cmd

cmdkey T
    file_temp_section
end_cmd

cmdkey U
    file_upload
        if_false
        crlf
            print "\r\n\x01hUpload Aborted!"
        end_if
end_cmd

cmdkey V
    getfilespec
        if_true
            file_view
        end_if
end_cmd

cmdkey W
    getfilespec
        if_true
            file_list_extended
        end_if
end_cmd

cmdkey X
    chkfile "%jsyswant.txt"
        if_true
            crlf
            printfile "%jsyswant.txt"
        else
            crlf
            print "\x01n\x01hNo particular files are being sought."
            crlf
        end_if
end_cmd

cmdkey ?
    compare_user_misc UM_EXPERT
        if_true
            menu "obv-2/files"
        end_if
end_cmd

cmdkey /U
    file_upload_user
end_cmd

cmdkey /D
    file_download_user
end_cmd

cmdkey *
    file_show_directories
end_cmd

cmdkey /*
    file_show_libraries
end_cmd

cmdkey +
    file_directory_up
end_cmd

cmdkey -
    file_directory_down
end_cmd

cmdkey /+
    file_library_up
end_cmd

cmdkey /-
    file_library_down
end_cmd

cmdkey !
    compare_ars SYSOP
        if_true
            cls
            menu "sysmain"
        end_if
end_cmd

print "\r\n\x01n\x01i\x01h\x01rUnknown Command!"
crlf
compare_user_misc UM_EXPERT
    if_true
        print "\x01n\x01gHit \"\x01c?\x01g\" for menu.\x01n"
    end_if
end_cmd

cls
print "\x01n\x01hError in Command Shell!"
crlf
print "Please Notify SysOp!"
crlf
pause
hangup

