!include sbbsdefs.inc

:main
cmd_home
inc_main_cmds
node_action NODE_MAIN
compare_user_misc UM_EXPERT
    if_false
        cls
        menu "obv-2/main"
    end_if

async
crlf
print "\x01n\x01gMain \x01cþ\x01h@TLEFT@\x01n\x01cþ"
print " \x01h\x01kC\x01n\x01go\x01hm\x01nm\x01hand: "
compare_user_misc UM_COLDKEYS
    if_false
        getkeye
    else
        getstrupr 40
    end_if

pause_reset
cmdkey  "
end_cmd

cmdkey ^M
end_cmd

cmdkey ^@
end_cmd

cmdkey ^S
end_cmd

compare_user_misc UM_COLDKEYS
    if_false
        printkey
    end_if

cmdkey ;
    compare_user_misc UM_COLDKEYS
        if_true
            shift_str 1
        else
            getstrupr 40
        end_if
    exec_bin str_cmds
end_cmd

compare_user_misc UM_COLDKEYS
if_false
	crlf
	end_if
pause_reset

cmdkey A
    auto_message
end_cmd

# Your BBS listing Programs internal code goes here
# if it isn't the same as mine (i.e. LIST)
cmdkey B
    exec_xtrn sbbslist
end_cmd

cmdkey C
    page_sysop
end_cmd

cmdkey D
    userlist_logons
end_cmd

cmdkey E
    call email
end_cmd

cmdkey F
    setstr 1
    mail_send_feedback
end_cmd

cmdkey G
    logoff
end_cmd

cmdkey /G
    logoff_fast
end_cmd

cmdkey H
    nodelist_users
end_cmd

cmdkey K
    user_defaults
end_cmd

cmdkey L
    userlist_all
end_cmd

cmdkey M
    call message
end_cmd

cmdkey P
    xtrn_section
end_cmd

cmdkey Q
    call quick
end_cmd

cmdkey S
    info_system
end_cmd

cmdkey T
    call files
end_cmd

cmdkey I
    chat_section
end_cmd

cmdkey U
    minute_bank
end_cmd

cmdkey W
	exec "?logonlist -l"
end_cmd

cmdkey Y
    info_user
end_cmd

cmdkey Z
    msg_ptrs_reinit
end_cmd

cmdkey +
    user_defaults
end_cmd

cmdkey !
    compare_ars SYSOP
        if_true
			cls
			menu "sysmain"
        end_if
end_cmd

cmdkey ?
    compare_user_misc UM_EXPERT
        if_true
            menu "obv-2/main"
        end_if
end_cmd

cmdkey $
    crlf
    chkfile "%jdonation.txt"
        if_true
            printfile "%jdonation.txt"
        else
            print "\r\n\x01n\x01hPlease ask the SysOp about making a donation."
        end_if
    end_cmd

print "\r\n\x01n\x01i\x01h\x01rUnknown Command!\x01n"
    compare_user_misc UM_EXPERT
        if_true
            print "\r\n\x01n\x01h\x01gHit \"\x01c?\x01g\" for menu.\x01n"
            crlf
        end_if

end_cmd

Print "\r\n\x01n\x01hError is Command Shell!"
print "\r\nPlease Notify SysOp!"
crlf
pause
hangup

